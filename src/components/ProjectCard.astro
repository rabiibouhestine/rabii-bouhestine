---
import { Image } from 'astro:assets';

const { image, name, title, description, github, website, skills } = Astro.props;
---

<div class="flex flex-col bg-dark-2 p-8 rounded-lg">
  <div class="flex justify-between items-start mb-4">
    <div class="flex flex-col">
      <span class="text-accent">{name}</span>
      <h3>{title}</h3>
    </div>
    <div class="flex gap-3 mt-2">
      {github && (
        <a
          href={github}
          target="_blank"
          aria-label="source code"
          class="text-light-2 hover:text-accent transition-all duration-300 ease-in-out"
        >
          <!-- GitHub Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="32" height="32" color="currentColor" fill="none">
            <path d="M6.51734 17.1132C6.91177 17.6905 8.10883 18.9228 9.74168 19.2333M9.86428 22C8.83582 21.8306 2 19.6057 2 12.0926C2 5.06329 8.0019 2 12.0008 2C15.9996 2 22 5.06329 22 12.0926C22 19.6057 15.1642 21.8306 14.1357 22C14.1357 22 13.9267 18.5826 14.0487 17.9969C14.1706 17.4113 13.7552 16.4688 13.7552 16.4688C14.7262 16.1055 16.2043 15.5847 16.7001 14.1874C17.0848 13.1032 17.3268 11.5288 16.2508 10.0489C16.2508 10.0489 16.5318 7.65809 15.9996 7.56548C15.4675 7.47287 13.8998 8.51192 13.8998 8.51192C13.4432 8.38248 12.4243 8.13476 12.0018 8.17939C11.5792 8.13476 10.5568 8.38248 10.1002 8.51192C10.1002 8.51192 8.53249 7.47287 8.00036 7.56548C7.46823 7.65809 7.74917 10.0489 7.74917 10.0489C6.67316 11.5288 6.91516 13.1032 7.2999 14.1874C7.79575 15.5847 9.27384 16.1055 10.2448 16.4688C10.2448 16.4688 9.82944 17.4113 9.95135 17.9969C10.0733 18.5826 9.86428 22 9.86428 22Z" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </a>
      )}
      {website && (
        <a
          href={website}
          target="_blank"
          aria-label="live demo"
          class="text-light-2 hover:text-accent transition-all duration-300 ease-in-out"
        >
          <!-- External link icon -->
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
            <polyline points="15 3 21 3 21 9"/>
            <line x1="10" y1="14" x2="21" y2="3"/>
          </svg>
        </a>
      )}
    </div>
  </div>
  <Image
    src={image}
    alt="Project"
    layout="constrained"
    class="relative object-cover rounded-lg shrink-0"
  />
  <p class="my-4">
    {description}
  </p>
  <div class="mt-auto flex gap-3 flex-wrap font-mono text-xs">
    {skills.map((skill:any) => (
      <span class="px-3 py-1 rounded-full bg-accent/20 text-accent">
        {skill}
      </span>
    ))}
  </div>

</div>
