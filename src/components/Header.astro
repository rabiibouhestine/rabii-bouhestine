---
import { BriefcaseBusiness, Laptop, SquareUser } from '@lucide/astro';
---

<header class="h-16 py-4">
  <nav class="flex items-center justify-center gap-6 text-xl text-light-2">
    <a href="#about" class="flex items-center gap-1 relative after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-accent after:transition-all after:duration-300 hover:after:w-full hover:text-light-1">
      <SquareUser size="24" stroke-width={1} class="text-accent"/>
      About
    </a>
    <a href="#work" class="flex items-center gap-1 relative after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-accent after:transition-all after:duration-300 hover:after:w-full hover:text-light-1">
      <BriefcaseBusiness size="24" stroke-width={1} class="text-accent"/>
      Work
    </a>
    <a href="#projects" class="flex items-center gap-1 relative after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-accent after:transition-all after:duration-300 hover:after:w-full hover:text-light-1">
      <Laptop size="24" stroke-width={1} class="text-accent"/>
      Projects
    </a>
  </nav>
</header>
