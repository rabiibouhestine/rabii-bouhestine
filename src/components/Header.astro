---
import { Dot } from '@lucide/astro';

const linkClass = "text-sm flex items-center gap-1 relative after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-accent after:transition-all after:duration-300 hover:after:w-full hover:text-light-1"
---

<header class="h-16 py-4">
  <nav class="flex items-center justify-center gap-3 text-xl text-light-2">
    <a href="#about" class={linkClass}>
      ABOUT
    </a>
    <Dot stroke-width={4} class="text-accent"/>
    <a href="#work" class={linkClass}>
      WORK
    </a>
    <Dot stroke-width={4} class="text-accent"/>
    <a href="#projects" class={linkClass}>
      PROJECTS
    </a>
  </nav>
</header>
